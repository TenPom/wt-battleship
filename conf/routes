# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.MainController.battleship()

GET     /login                      controllers.MainController.login()
POST    /login                      controllers.MainController.authenticate()

GET 	/logout						controllers.MainController.logout()

GET     /signup                     controllers.MainController.signupForm()
POST    /signup                     controllers.MainController.signup()

POST     /openID/login               controllers.OpenIDController.loginPost()
GET     /openID/callback            controllers.OpenIDController.openIDCallback()

GET     /battleship                 controllers.MainController.battleship()

GET     /rules                      controllers.MainController.rules()

GET     /battleship/:command        controllers.MainController.wuiTuiInterface(command:String)

POST     /json/:commandline         controllers.MainController.jsonCommand(commandline:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /javascriptRoutes           controllers.MainController.javascriptRoutes()